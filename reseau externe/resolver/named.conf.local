options {
	directory "/var/cache/bind";
	querylog yes;

	# accepter toutes les requÃªtes
	listen-on { any; };
	allow-query { any; };
	listen-on-v6 { any; };

	# refuser la recursion
    recursion no;
	# refuser tous transfert de zone
    allow-transfer { none; };
}

zone "m2-5.ephec-ti.be" {
    type master;
    file "/etc/bind/zones/m2-5.ephec-ti.be.zone";
};
